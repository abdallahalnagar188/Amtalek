<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_auth"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="eramo.amtalek.presentation.ui.auth.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash"/>
    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="eramo.amtalek.presentation.ui.auth.OnBoardingFragment"
        android:label="OnBoardingFragment"
        tools:layout="@layout/fragment_on_boarding"/>
    <fragment
        android:id="@+id/loginFragment"
        android:name="eramo.amtalek.presentation.ui.auth.LoginFragment"
        android:label="@string/log_in"
        tools:layout="@layout/fragment_login">
        <argument
            android:name="proceedRequire"
            android:defaultValue="false"
            app:argType="boolean" />
        <deepLink
            android:id="@+id/deepLink2"
            android:autoVerify="true"
            app:uri="android-app://eramo.amtalek/loginFragment?proceedRequire={proceedRequire}" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="eramo.amtalek.presentation.ui.auth.SignUpFragment"
        android:label="@string/sign_up"
        tools:layout="@layout/fragment_signup"/>
    <fragment
        android:id="@+id/forgetPasswordFragment"
        android:name="eramo.amtalek.presentation.ui.auth.ForgetPasswordFragment"
        android:label="@string/forgot_password"
        tools:layout="@layout/fragment_forget_password" />
    <fragment
        android:id="@+id/policyFragment"
        android:name="eramo.amtalek.presentation.ui.auth.PolicyFragment"
        android:label="PolicyFragment"
        tools:layout="@layout/fragment_policy">
        <deepLink
            android:id="@+id/deepLink3"
            app:uri="android-app://eramo.amtalek/policyFragment" />
    </fragment>
    <fragment
        android:id="@+id/informationFragment"
        android:name="eramo.amtalek.presentation.ui.auth.InformationFragment"
        android:label="InformationFragment"
        tools:layout="@layout/fragment_information"/>
</navigation>