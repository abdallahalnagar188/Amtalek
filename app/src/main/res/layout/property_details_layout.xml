<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linear_roi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_10sdp"
        android:weightSum="2"
        android:background="@drawable/shape_gray_layer_for_prop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_roi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@font/font_medium"
            android:text="@string/roi"
            android:layout_weight="1"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tv_roi_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/font_extrabold"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/_12sdp"
            android:textAlignment="viewEnd"
            android:textColor="@color/amtalek_blue_dark"
            android:textSize="@dimen/_11ssp"
            tools:text="1525898" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_property_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_roi"
    >

        <TextView
            android:id="@+id/tv_property_code"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@font/font_medium"

            android:text="@string/property_code"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tv_property_code_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/font_extrabold"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/_12sdp"
            android:textAlignment="viewEnd"
            android:textColor="@color/amtalek_blue_dark"
            android:textSize="@dimen/_11ssp"
            tools:text="1525898" />
    </LinearLayout>

    <!-- Type -->
    <LinearLayout
        android:id="@+id/linear_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray_layer_for_prop"
        android:orientation="horizontal"

        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/linear_property_code">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"

            android:fontFamily="@font/font_medium"
            android:text="@string/type"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tv_type_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/font_extrabold"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/_12sdp"
            android:textAlignment="viewEnd"
            android:textColor="@color/amtalek_blue_dark"
            android:textSize="@dimen/_11ssp"
            tools:text="Town House" />
    </LinearLayout>

    <!-- Area -->
    <LinearLayout
        android:id="@+id/linear_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/linear_type">

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="@dimen/_100sdp"

            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"

            android:fontFamily="@font/font_medium"
            android:text="@string/area_with_dots"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tv_area_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/font_extrabold"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/_12sdp"
            android:textAlignment="viewEnd"
            android:textColor="@color/amtalek_blue_dark"
            android:textSize="@dimen/_11ssp"
            tools:text="188 sqft" />
    </LinearLayout>

    <!-- Bedrooms -->
    <LinearLayout
        android:id="@+id/linear_bedrooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray_layer_for_prop"
        android:orientation="horizontal"

        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/linear_area">

        <TextView
            android:id="@+id/tv_bedrooms"
            android:layout_width="@dimen/_100sdp"

            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@font/font_medium"

            android:text="@string/bedrooms_with_dots"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tv_bedrooms_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/font_extrabold"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/_12sdp"
            android:textAlignment="viewEnd"
            android:textColor="@color/amtalek_blue_dark"
            android:textSize="@dimen/_11ssp"
            tools:text="2" />
    </LinearLayout>

    <!-- Bathrooms -->
    <LinearLayout
        android:id="@+id/linear_bathrooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/linear_bedrooms">

        <TextView
            android:id="@+id/tv_bathrooms"
            android:layout_width="@dimen/_100sdp"

            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@font/font_medium"

            android:text="@string/bathrooms_with_dots"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tv_bathroom_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/font_extrabold"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/_12sdp"
            android:textAlignment="viewEnd"
            android:textColor="@color/amtalek_blue_dark"
            android:textSize="@dimen/_11ssp"
            tools:text="2" />
    </LinearLayout>

    <!-- Finishing -->
    <LinearLayout
        android:id="@+id/linear_finishing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray_layer_for_prop"
        android:orientation="horizontal"

        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/linear_bathrooms">

        <TextView
            android:id="@+id/tv_finishing"
            android:layout_width="@dimen/_100sdp"

            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@font/font_medium"
            android:text="@string/finishing_with_dots"
            android:textColor="@color/text_gray"

            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tv_finishing_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/font_extrabold"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/_12sdp"
            android:textAlignment="viewEnd"
            android:textColor="@color/amtalek_blue_dark"
            android:textSize="@dimen/_11ssp"
            tools:text="Finishing half" />
    </LinearLayout>

    <!-- Floors -->
    <LinearLayout
        android:id="@+id/linear_floors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/linear_finishing">

        <TextView
            android:id="@+id/tv_floors"
            android:layout_width="@dimen/_100sdp"

            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@font/font_medium"
            android:text="@string/floors_with_dots"
            android:textColor="@color/text_gray"

            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tv_floors_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/font_extrabold"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/_12sdp"
            android:textAlignment="viewEnd"
            android:textColor="@color/amtalek_blue_dark"
            android:textSize="@dimen/_11ssp"
            tools:text="4.5.6.7" />
    </LinearLayout>

    <!-- Floor -->
    <LinearLayout
        android:id="@+id/linear_floor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray_layer_for_prop"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/linear_floors">

        <TextView
            android:id="@+id/tv_floor"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@font/font_medium"
            android:text="@string/floor_with_dots"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tv_floor_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/font_extrabold"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/_12sdp"
            android:textAlignment="viewEnd"
            android:textColor="@color/amtalek_blue_dark"
            android:textSize="@dimen/_11ssp"
            tools:text="ceramic" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
