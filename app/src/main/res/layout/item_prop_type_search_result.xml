<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_4sdp"
    android:layout_marginVertical="@dimen/_2sdp"
    android:paddingTop="@dimen/_2sdp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_type_iv"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:backgroundTint="#ECF7FF"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_prop_type"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            tools:src="@drawable/ic_profile" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_prop_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@id/card_type_iv"
        app:layout_constraintStart_toStartOf="@id/card_type_iv"
        app:layout_constraintTop_toBottomOf="@id/card_type_iv"
        tools:text="Property Type" />

    <TextView
        android:id="@+id/tv_prop_type_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@id/card_type_iv"
        app:layout_constraintStart_toStartOf="@id/card_type_iv"
        app:layout_constraintTop_toBottomOf="@id/tv_prop_type"
        tools:text="10" />
</androidx.constraintlayout.widget.ConstraintLayout>