<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratsemibold"
        android:text="@string/the_newest_apartments_in_egypt"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/_11sdp"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_see_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_more"
        android:layout_marginEnd="@dimen/_11sdp"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all"
            android:textColor="@color/text_faded_gray"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/divider_one"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider_one"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:background="@color/text_faded_gray"
            app:layout_constraintBottom_toBottomOf="@id/tv_all"
            app:layout_constraintEnd_toStartOf="@id/tv_for_sell"
            app:layout_constraintStart_toEndOf="@id/tv_all"
            app:layout_constraintTop_toTopOf="@id/tv_all" />

        <TextView
            android:id="@+id/tv_for_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/for_sell"
            android:textColor="@color/text_faded_gray"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/divider_two"
            app:layout_constraintStart_toEndOf="@id/divider_one"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/divider_two"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="11dp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:background="@color/text_faded_gray"
            app:layout_constraintBottom_toBottomOf="@id/tv_for_sell"
            app:layout_constraintEnd_toStartOf="@id/tv_for_rent"
            app:layout_constraintStart_toEndOf="@id/tv_for_sell"
            app:layout_constraintTop_toTopOf="@id/tv_for_sell" />

        <TextView
            android:id="@+id/tv_for_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/for_rent"
            android:textColor="@color/text_faded_gray"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/divider_two"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_14sdp"
        android:nestedScrollingEnabled="false"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        tools:listitem="@layout/item_property_preview" />


</androidx.constraintlayout.widget.ConstraintLayout>