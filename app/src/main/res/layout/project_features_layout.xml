<?xml version="1.0" encoding="utf-8"?>
<RadioGroup android:id="@+id/radio_group"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:background="#F9F9F9"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/spinner_currency"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_property_features"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/montserratbold"
            android:text="@string/project_features"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/rb_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:button="@drawable/radio_button_selector"
            android:paddingStart="@dimen/_4sdp"
            android:checked="true"
            android:paddingBottom="@dimen/_3sdp"
            android:text="@string/quiet_area"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toStartOf="@id/rb_two"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_property_features" />

        <CheckBox
            android:id="@+id/rb_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:button="@drawable/radio_button_selector"
            android:paddingStart="@dimen/_4sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="@string/transports"
            android:checked="true"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toStartOf="@id/rb_three"
            app:layout_constraintStart_toEndOf="@id/rb_one"
            app:layout_constraintTop_toBottomOf="@id/tv_property_features" />

        <CheckBox
            android:id="@+id/rb_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:button="@drawable/radio_button_selector"
            android:paddingStart="@dimen/_4sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:checked="true"
            android:text="@string/location_radio_button"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rb_two"
            app:layout_constraintTop_toBottomOf="@id/tv_property_features" />

        <CheckBox
            android:id="@+id/rb_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:button="@drawable/radio_button_selector"
            android:paddingStart="@dimen/_4sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="@string/gym"
            android:checked="true"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toTopOf="@id/rb_seven"
            app:layout_constraintStart_toStartOf="@id/rb_one"
            app:layout_constraintTop_toBottomOf="@id/rb_one" />

        <CheckBox
            android:id="@+id/rb_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:button="@drawable/radio_button_selector"
            android:paddingStart="@dimen/_4sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="@string/market_radio_button"
            android:textSize="@dimen/_12ssp"
            android:checked="true"
            app:layout_constraintBottom_toTopOf="@id/rb_eight"
            app:layout_constraintStart_toStartOf="@id/rb_two"
            app:layout_constraintTop_toBottomOf="@id/rb_one" />

        <CheckBox
            android:id="@+id/rb_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:button="@drawable/radio_button_selector"
            android:paddingStart="@dimen/_4sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="@string/pool"
            android:textSize="@dimen/_12ssp"
            android:checked="true"
            app:layout_constraintBottom_toTopOf="@id/rb_nine"
            app:layout_constraintStart_toStartOf="@id/rb_three"
            app:layout_constraintTop_toBottomOf="@id/rb_one" />

        <CheckBox
            android:id="@+id/rb_seven"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:button="@drawable/radio_button_selector"
            android:paddingStart="@dimen/_4sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="@string/church"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@id/rb_four"
            app:layout_constraintTop_toBottomOf="@id/rb_four" />

        <CheckBox
            android:id="@+id/rb_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:button="@drawable/radio_button_selector"
            android:paddingStart="@dimen/_4sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/mosque"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@id/rb_five"
            app:layout_constraintTop_toBottomOf="@id/rb_four" />

        <CheckBox
            android:id="@+id/rb_nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingStart="@dimen/_4sdp"
            android:button="@drawable/radio_button_selector"
            android:paddingBottom="@dimen/_3sdp"
            android:text="@string/sports_club"
            android:textSize="@dimen/_12ssp"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/rb_six"
            app:layout_constraintTop_toBottomOf="@id/rb_four" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RadioGroup>