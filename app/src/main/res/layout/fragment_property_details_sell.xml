<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    tools:context=".presentation.ui.main.extension.PropertyDetailsSellFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/_110sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/view_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                    android:id="@+id/image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    app:autoPlay="false"
                    app:autoPlayDelay="2000"
                    app:carouselType="BLOCK"
                    app:imageScaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:showNavigationButtons="false"
                    app:showTopShadow="false" />

                <me.relex.circleindicator.CircleIndicator2
                    android:id="@+id/image_slider_dots"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_18sdp"
                    app:ci_animator="@animator/scale_with_alpha"
                    app:ci_drawable="@drawable/ic_dot_selected"
                    app:ci_drawable_unselected="@drawable/ic_dot_unselected"
                    app:layout_constraintEnd_toEndOf="@+id/image_slider"
                    app:layout_constraintStart_toStartOf="@+id/image_slider"
                    app:layout_constraintTop_toBottomOf="@+id/image_slider" />

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:src="@drawable/ic_back_dark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:src="@drawable/ic_share"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_favourite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:src="@drawable/ic_favourite_with_frame"
                    app:layout_constraintEnd_toStartOf="@id/iv_share"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@id/tv_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/screen_margin_sides"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserratbold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_slider_dots"
                    tools:text="4,000,000 EGP" />

                <TextView
                    android:id="@id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/screen_margin_sides"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/montserratmedium"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_price"
                    tools:text="Residential apartment for sale, super lux with elevator" />

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/screen_margin_sides"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:src="@drawable/ic_location_black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title" />

                <TextView
                    android:id="@id/tv_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserratmedium"
                    android:maxLines="1"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_location"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_location"
                    app:layout_constraintTop_toTopOf="@id/iv_location"
                    tools:text="Sheikh Zayed , Giza" />

                <ImageView
                    android:id="@+id/iv_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:src="@drawable/ic_clock"
                    app:layout_constraintBottom_toBottomOf="@id/tv_date"
                    app:layout_constraintEnd_toStartOf="@id/tv_date"
                    app:layout_constraintTop_toTopOf="@id/tv_date"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/screen_margin_sides"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserratmedium"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    tools:text="8/7/2023" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/property_content_constraintLayout"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginHorizontal="@dimen/screen_margin_sides"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:background="@color/amtalek_blue_dark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_location">

                    <ImageView
                        android:id="@+id/iv_finishing"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:src="@drawable/ic_finishing"
                        app:layout_constraintBottom_toTopOf="@+id/tv_finishing"
                        app:layout_constraintEnd_toStartOf="@id/iv_location2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_finishing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:gravity="center"
                        android:text="Finished\n available"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_6ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/iv_finishing"
                        app:layout_constraintStart_toStartOf="@id/iv_finishing"
                        app:layout_constraintTop_toBottomOf="@id/iv_finishing" />

                    <ImageView
                        android:id="@+id/iv_location2"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_marginStart="@dimen/screen_margin_sides"
                        android:src="@drawable/ic_compass_white"
                        app:layout_constraintBottom_toTopOf="@+id/tv_location2"
                        app:layout_constraintEnd_toStartOf="@id/iv_area"
                        app:layout_constraintStart_toEndOf="@id/iv_finishing"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_location2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:gravity="center"
                        android:text="New Cairo"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_6ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/iv_location2"
                        app:layout_constraintStart_toStartOf="@id/iv_location2"
                        app:layout_constraintTop_toBottomOf="@id/iv_location2" />

                    <ImageView
                        android:id="@+id/iv_area"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_marginStart="@dimen/screen_margin_sides"
                        android:src="@drawable/ic_area_rounded_white"
                        app:layout_constraintBottom_toTopOf="@+id/tv_area"
                        app:layout_constraintEnd_toStartOf="@id/iv_bathrooms"
                        app:layout_constraintStart_toEndOf="@id/iv_location2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:gravity="center"
                        android:text="111\n m2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_6ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/iv_area"
                        app:layout_constraintStart_toStartOf="@id/iv_area"
                        app:layout_constraintTop_toBottomOf="@id/iv_area" />

                    <ImageView
                        android:id="@+id/iv_bathrooms"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_marginStart="@dimen/screen_margin_sides"
                        android:src="@drawable/ic_bathrooms2"
                        app:layout_constraintBottom_toTopOf="@+id/tv_area"
                        app:layout_constraintEnd_toStartOf="@id/iv_bedrooms"
                        app:layout_constraintStart_toEndOf="@id/iv_area"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_bathrooms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:gravity="center"
                        android:text="2\n bedrooms"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_6ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/iv_bathrooms"
                        app:layout_constraintStart_toStartOf="@id/iv_bathrooms"
                        app:layout_constraintTop_toBottomOf="@id/iv_bathrooms" />

                    <ImageView
                        android:id="@+id/iv_bedrooms"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_marginStart="@dimen/screen_margin_sides"
                        android:src="@drawable/ic_bedrooms2"
                        app:layout_constraintBottom_toTopOf="@+id/tv_area"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_bathrooms"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_bedrooms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:gravity="center"
                        android:text="2\n bedrooms"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_6ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/iv_bedrooms"
                        app:layout_constraintStart_toStartOf="@id/iv_bedrooms"
                        app:layout_constraintTop_toBottomOf="@id/iv_bedrooms" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/user_profile_layout"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/linear_gradient"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/property_content_constraintLayout">


                    <TextView
                        android:id="@+id/tv_property_owner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/montserratbold"
                        android:text="@string/property_owner"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_user_image"
                        android:layout_width="@dimen/_44sdp"
                        android:layout_height="@dimen/_44sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_property_owner"
                        app:shapeAppearanceOverlay="@style/ShapeableImageViewCircularStyle"
                        tools:src="@color/gold" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserratmedium"
                        android:maxLines="1"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintBottom_toTopOf="@id/tv_user_id"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_user_image"
                        app:layout_constraintTop_toTopOf="@id/iv_user_image"
                        tools:text="Lana Realstate company" />

                    <TextView
                        android:id="@+id/tv_user_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_9sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserratregular"
                        android:maxLines="1"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintBottom_toBottomOf="@id/iv_user_image"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_user_image"
                        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
                        tools:text="Lana.Eramo12" />

                    <TextView
                        android:id="@+id/tv_visit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_2ssp"
                        android:fontFamily="@font/montserratregular"
                        android:gravity="center"
                        android:text="@string/visit_profile"
                        android:textColor="#EAB010"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintEnd_toStartOf="@+id/iv_arrow_broker"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_arrow_broker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/screen_margin_sides"
                        android:src="@drawable/ic_arrow_right_goldt"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/screen_margin_sides"
                    android:fontFamily="@font/montserratbold"
                    android:text="@string/details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/user_profile_layout" />

                <include
                    android:id="@+id/property_details_layout"
                    layout="@layout/property_details_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/screen_margin_sides"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_details" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="#F9F9F9"
                    android:fontFamily="@font/montserratbold"
                    android:paddingHorizontal="@dimen/screen_margin_sides"
                    android:paddingTop="@dimen/_14sdp"
                    android:text="@string/description"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/property_details_layout" />

                <TextView
                    android:id="@+id/tv_description_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#F9F9F9"
                    android:fontFamily="@font/montserratmedium"
                    android:paddingHorizontal="@dimen/screen_margin_sides"
                    android:paddingVertical="@dimen/_14sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_description"
                    tools:text="Descriptive Text is a text which says what a person or a thing is like. Its purpose is to describe and reveal a particular person, place, or thing." />

                <include
                    android:id="@+id/property_features_layout"
                    layout="@layout/property_features_layout_dynamic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_50sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_description_value" />

                <TextView
                    android:id="@+id/tv_video"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:fontFamily="@font/montserratbold"
                    android:paddingHorizontal="@dimen/screen_margin_sides"
                    android:text="@string/real_estate_video"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/property_features_layout" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/youtube_video_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_4sdp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_video">

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/FAboutUs_youtubeView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:showFullScreenButton="true" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_views_chart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/screen_margin_sides"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/montserratbold"
                    android:text="@string/views_chart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/youtube_video_view" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_300sdp"
                    android:layout_marginHorizontal="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_views_chart" />

                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/screen_margin_sides"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/montserratbold"
                    android:text="@string/rate"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chart" />

                <RatingBar
                    android:id="@+id/rate_bar"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_rate" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_name"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edit_text_height"
                    android:layout_marginHorizontal="@dimen/screen_margin_sides"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserratregular"
                    android:textColorHint="@color/text_gray"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rate_bar">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittext_background"
                        android:fontFamily="@font/montserratregular"
                        android:hint="@string/name"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_12ssp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_title"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edit_text_height"
                    android:layout_marginHorizontal="@dimen/screen_margin_sides"
                    android:layout_marginTop="@dimen/edit_text_margin_top"
                    android:fontFamily="@font/montserratregular"
                    android:textColorHint="@color/text_gray"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/til_name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittext_background"
                        android:fontFamily="@font/montserratregular"
                        android:hint="@string/title_rate"
                        android:inputType="textEmailSubject"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_12ssp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_your_rate"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_140sdp"
                    android:layout_marginHorizontal="@dimen/screen_margin_sides"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:fontFamily="@font/montserratregular"
                    android:textColorHint="@color/gray"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_title">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_your_rate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittext_background"
                        android:fontFamily="@font/montserratregular"
                        android:gravity="start"
                        android:hint="@string/your_rate"
                        android:inputType="textMultiLine"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_12ssp" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/screen_margin_sides"
                    android:layout_marginTop="@dimen/home_margin_top"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:background="@drawable/button_background_long"
                    android:fontFamily="@font/montserratregular"
                    android:text="@string/rate_send"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/til_your_rate" />

                <TextView
                    android:id="@+id/tv_ratings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/screen_margin_sides"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/montserratsemibold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_send"
                    tools:text="Rating (100)" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_rating_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/screen_margin_sides"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_ratings"
                    tools:listitem="@layout/item_ratings" />

                <TextView
                    android:id="@+id/tv_similar_properties"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/screen_margin_sides"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserratbold"
                    android:text="@string/similar_properties"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_rating_comments" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_similar_properties"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/_14sdp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_similar_properties"
                    tools:listitem="@layout/item_featured_real_estate" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:shimmer_duration="4000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <include layout="@layout/fragment_property_details_sell_shimmer" />
            </com.facebook.shimmer.ShimmerFrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/share_view"
        layout="@layout/layout_contact_us"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginVertical="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_layout_share_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:visibility="visible"
        app:shimmer_duration="4000"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginVertical="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >
        <include layout="@layout/layout_contact_us_shimmer" />
    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>