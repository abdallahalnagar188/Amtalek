<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.drawer.messaging.addons.BuyAddonsFragment">

    <include
        android:id="@+id/in_toolbar"
        layout="@layout/layout_toolbar_with_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/in_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <!-- TextView at the top -->
            <TextView
                android:id="@+id/tv_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_order"
                android:fontFamily="@font/font"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/amtalek_blue"
                android:layout_marginBottom="@dimen/_16sdp" />

            <!-- Item 1 with two TextViews horizontally aligned -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_20sdp">
                <TextView
                    android:id="@+id/tv_item1_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Item 1 Label"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/amtalek_blue" />
                <TextView
                    android:id="@+id/tv_item1_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item 1 Value"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/amtalek_blue" />
            </LinearLayout>

            <!-- Item 2 with two TextViews horizontally aligned -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_20sdp">
                <TextView
                    android:id="@+id/tv_item2_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Item 2 Label"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/amtalek_blue" />
                <TextView
                    android:id="@+id/tv_item2_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item 2 Value"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/amtalek_blue" />
            </LinearLayout>

            <!-- Item 3 with two TextViews horizontally aligned -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_20sdp">
                <TextView
                    android:id="@+id/tv_item3_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Item 3 Label"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/amtalek_blue" />
                <TextView
                    android:id="@+id/tv_item3_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item 3 Value"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/amtalek_blue" />
            </LinearLayout>

            <!-- Item 4 with two TextViews horizontally aligned -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_20sdp">
                <TextView
                    android:id="@+id/tv_item4_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Item 4 Label"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/amtalek_blue" />
                <TextView
                    android:id="@+id/tv_item4_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item 4 Value"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/amtalek_blue" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@color/amtalek_blue"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
