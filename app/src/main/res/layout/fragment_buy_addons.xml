<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.drawer.messaging.addons.BuyAddonsFragment">

    <include
        android:id="@+id/in_toolbar"
        layout="@layout/layout_toolbar_with_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/in_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <!-- TextView at the top -->
            <TextView
                android:id="@+id/tv_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_order"
                android:fontFamily="@font/font"
                android:textStyle="bold"
                android:textSize="@dimen/_18ssp"
                android:textColor="@color/amtalek_blue"
                android:layout_marginBottom="@dimen/_20sdp" />

            <!-- Item 1 with two TextViews horizontally aligned -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_20sdp">
                <TextView
                    android:id="@+id/tv_item1_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Item 1 Label"
                    android:fontFamily="@font/font"
                    android:gravity="start"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/amtalek_blue" />
                <TextView
                    android:id="@+id/tv_item1_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/amtalek_blue" />
                <TextView
                    android:id="@+id/x1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/amtalek_blue" />
                <TextView
                    android:id="@+id/tv_item1_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item 1 Value"
                    android:gravity="end"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/amtalek_blue" />
            </LinearLayout>

            <!-- Item 2 with two TextViews horizontally aligned -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_20sdp">
                <TextView
                    android:id="@+id/tv_item2_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Item 2 Label"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/amtalek_blue" />
                <TextView
                    android:id="@+id/tv_item2_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:fontFamily="@font/font"
                    android:gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/amtalek_blue" />
                <TextView
                    android:id="@+id/x2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/amtalek_blue" />
                <TextView
                    android:id="@+id/tv_item2_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item 2 Value"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/amtalek_blue" />
            </LinearLayout>

            <!-- Item 3 with two TextViews horizontally aligned -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_20sdp">
                <TextView
                    android:id="@+id/tv_item3_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Item 3 Label"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/amtalek_blue" />
                <TextView
                    android:id="@+id/tv_item3_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:fontFamily="@font/font"
                    android:gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/amtalek_blue" />

                <TextView
                    android:id="@+id/x3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/amtalek_blue" />
                <TextView
                    android:id="@+id/tv_item3_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item 3 Value"
                    android:fontFamily="@font/font"
                    android:layout_marginHorizontal="@dimen/_10sdp"

                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/amtalek_blue" />
            </LinearLayout>

            <!-- Item 4 with two TextViews horizontally aligned -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_20sdp">
                <TextView
                    android:id="@+id/tv_item4_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Item 4 Label"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/amtalek_blue" />
                <TextView
                    android:id="@+id/tv_item4_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:fontFamily="@font/font"
                    android:gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/amtalek_blue" />
                <TextView
                    android:id="@+id/x4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/amtalek_blue" />

                <TextView
                    android:id="@+id/tv_item4_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item 4 Value"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/amtalek_blue" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@color/amtalek_blue"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                android:paddingVertical="@dimen/_10sdp">
                <TextView
                    android:id="@+id/tv_duration_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/duration"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/amtalek_blue"
                    android:layout_marginVertical="@dimen/_8sdp"
                    />
                <TextView
                    android:id="@+id/tv_duration_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_duration_time"
                    tools:text="@string/duration_value"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/amtalek_blue"
                    />

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_duration_time"
                    android:text="@string/total_price"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/amtalek_blue"
                    android:layout_marginVertical="@dimen/_8sdp"
                    />
                <TextView
                    android:id="@+id/tv_total_price_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/tv_duration_value"
                    app:layout_constraintTop_toTopOf="@id/tv_total_price"
                    tools:text="@string/total_price"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/amtalek_blue"
                    />
                <TextView
                    android:id="@+id/tv_way_to_bay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/tv_total_price"
                    app:layout_constraintTop_toBottomOf="@id/tv_total_price"
                    android:text="@string/way_to_bay"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/amtalek_blue"
                    android:layout_marginVertical="@dimen/_8sdp"
                    />
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/user_toggle_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/tv_total_price_value"
                    app:layout_constraintTop_toBottomOf="@id/tv_total_price_value"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:singleSelection="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cash_btn"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font"
                        android:text="@string/payment_cash"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:textColor="@color/amtalek_blue_dark"
                        android:textSize="@dimen/_10ssp"
                        app:cornerRadius="@dimen/_4sdp"
                        app:rippleColor="@color/transparent"
                        app:strokeColor="@color/amtalek_blue_dark" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/visa_btn"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font"
                        android:text="@string/payment_card"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:textColor="@color/amtalek_blue_dark"
                        android:textSize="@dimen/_10ssp"
                        app:cornerRadius="@dimen/_4sdp"
                        app:rippleColor="@color/transparent"
                        app:strokeColor="@color/amtalek_blue_dark" />
                </com.google.android.material.button.MaterialButtonToggleGroup>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:paddingHorizontal="@dimen/_50sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/user_toggle_group"
                    android:text="@string/buy_now_addon"
                    android:fontFamily="@font/font"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/white"
                    app:cornerRadius="@dimen/_8sdp"
                    app:backgroundTint="@color/amtalek_blue_dark"
                    android:textAllCaps="false"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
