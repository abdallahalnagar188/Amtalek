<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemQuestion_lin_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    android:layoutDirection="locale"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemQuestion_cvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9">

            <TextView
                android:id="@+id/itemQuestion_tv_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/montserratsemibold"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:text="@string/do_you_want_to_ask"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <ImageView
                android:id="@+id/itemQuestion_iv_arrow"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_arrow_down"
                app:tint="@color/black"
                android:contentDescription="@null" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/itemQuestion_cvBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        app:cardElevation="0dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_6sdp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemQuestion_cv_lang">

        <TextView
            android:id="@+id/itemQuestion_tv_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/montserratregular"
            android:lineSpacingExtra="@dimen/_4sdp"
            android:padding="@dimen/_8sdp"
            android:text="@string/answer_th_questions_to_test_answer_th_questions_to_test_answer_th_questions_to_test"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

    </androidx.cardview.widget.CardView>
</LinearLayout>