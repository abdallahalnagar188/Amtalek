<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_type_iv"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_80sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#ECF7FF"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp"
        >
        <ImageView
            android:id="@+id/iv_prop_type"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_55sdp"
            tools:src="@drawable/ic_profile"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_prop_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/card_type_iv"
        app:layout_constraintEnd_toEndOf="@id/card_type_iv"
        app:layout_constraintTop_toBottomOf="@id/card_type_iv"
        tools:text="Property Type"
        android:fontFamily="@font/font_medium"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/amtalek_blue"
        />


</androidx.constraintlayout.widget.ConstraintLayout>