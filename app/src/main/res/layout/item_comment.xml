<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:padding="@dimen/_8sdp"
    android:background="@drawable/shape_gray">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_image"
        android:layout_width="@dimen/_54sdp"
        android:layout_height="@dimen/_54sdp"
        android:layout_gravity="center"
        android:src="@drawable/pic_profile_comment"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/_1sdp"
        app:civ_circle_background_color="@color/gray_low"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:fontFamily="@font/montserratregular"
        android:text="@string/allison_johnson"
        android:textColor="@color/amtalek_blue_dark"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toEndOf="@+id/cv_image"
        app:layout_constraintTop_toTopOf="@+id/cv_image" />

    <TextView
        android:id="@+id/FDProduct_tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:ellipsize="end"
        android:fontFamily="@font/montserratregular"
        android:maxLines="2"
        android:text="@string/_22_aug_2022"
        android:textColor="@color/amtalek_blue_dark"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/itemCart_tv_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/montserratregular"
        android:text="@string/l_rem_ipsum_beh_resk_stafettl_kare_exod_ling_l_ngar_prel_anabelt_och_intrassa_b_lig_er_dek_antiskop_och_semipyse_oling_plan_nera_p_asar_megaden_unesk"
        android:textColor="@color/amtalek_blue_dark"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/FDProduct_tv_data"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/FDProduct_tv_data" />

</androidx.constraintlayout.widget.ConstraintLayout>